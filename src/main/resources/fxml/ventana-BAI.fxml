<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER" prefHeight="54.0" prefWidth="597.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Inventario de Ansiedad de Beck (BAI)">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
         <content>
            <VBox prefHeight="276.0" prefWidth="598.0" spacing="20.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <TextArea disable="true" editable="false" prefHeight="85.0" prefWidth="568.0" text="En el cuestionario hay una lista de síntomas comunes de la ansidad. &#10;Lea cada uno de los ítems atentamente, e indique cuanto le ha afectado en la ultima semana incluyendo hoy:" wrapText="true" />
                  <VBox spacing="5.0">
                     <children>
                        <Label text="1. Torpe o entumecido" />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <RadioButton text="1. En absoluto">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="q1" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton text="2. Levemente" toggleGroup="$q1" userData="1" />
                              <RadioButton text="3. Moderadamente" toggleGroup="$q1" userData="2" />
                              <RadioButton text="4. Severamente" toggleGroup="$q1" userData="3" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="2. Acalorado" />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <RadioButton text="1. En absoluto">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="q2" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton text="2. Levemente" toggleGroup="$q2" userData="1" />
                              <RadioButton text="3. Moderadamente" toggleGroup="$q2" userData="2" />
                              <RadioButton text="4. Severamente" toggleGroup="$q2" userData="3" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="3. Con temblor en las piernas" />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <RadioButton text="1. En absoluto">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="q3" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton text="2. Levemente" toggleGroup="$q3" userData="1" />
                              <RadioButton text="3. Moderadamente" toggleGroup="$q3" userData="2" />
                              <RadioButton text="4. Severamente" toggleGroup="$q3" userData="3" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="4. Incapaz de relajarse" />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <RadioButton text="1. En absoluto">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="q4" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton text="2. Levemente" toggleGroup="$q4" userData="1" />
                              <RadioButton text="3. Moderadamente" toggleGroup="$q4" userData="2" />
                              <RadioButton text="4. Severamente" toggleGroup="$q4" userData="3" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="79.0" prefWidth="568.0" spacing="5.0">
                     <children>
                        <Label text="5. Con temor a que ocurra lo peor" />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <RadioButton text="1. En absoluto">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="q5" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton text="2. Levemente" toggleGroup="$q5" />
                              <RadioButton text="3. Moderadamente" toggleGroup="$q5" />
                              <RadioButton text="4. Severamente" toggleGroup="$q5" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Pane prefHeight="42.0" prefWidth="650.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="265.0" layoutY="10.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="70.0" text="Guardar" onAction="#onGuard"/>
         </children>
      </Pane>
   </bottom>
</BorderPane>
