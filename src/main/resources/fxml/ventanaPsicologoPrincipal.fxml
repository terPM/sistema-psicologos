<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>

<VBox prefHeight="400.0" prefWidth="640.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- ENCABEZADO SUPERIOR -->
        <AnchorPane prefHeight="50" style="-fx-background-color: #EAEAEA;">
            <children>
                <Label text="Men煤 Principal del Psic贸logo" layoutX="14" layoutY="12">
                    <font>
                        <Font name="Leelawadee UI" size="21"/>
                    </font>
                </Label>

                <!-- Bot贸n de campana -->
                <Button fx:id="btnCampana"
                        layoutX="580" layoutY="10"
                        mnemonicParsing="false"
                        onAction="#abrirNotificaciones"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <Label text="" style="-fx-font-size: 24px;"/>
                    </graphic>
                </Button>

                <!-- Burbuja roja -->
                <Circle fx:id="burbujaNotificacion"
                        radius="6"
                        layoutX="600" layoutY="10"
                        fill="red"
                        visible="false"/>
            </children>
        </AnchorPane>

        <AnchorPane VBox.vgrow="ALWAYS">
            <children>

                <!-- SPLITPANE: AHORA SOLO DOS COLUMNAS -->
                <SplitPane dividerPositions="0.3"
                           prefHeight="350.0" prefWidth="640.0">

                    <!-- COLUMNA IZQUIERDA -->
                    <AnchorPane minWidth="200.0">
                        <children>
                            <VBox alignment="CENTER_LEFT" layoutX="9.0" layoutY="14.0"
                                  prefHeight="350.0" prefWidth="171.0" spacing="10.0">
                                <children>

                                    <Label text="Opciones del Psic贸logo">
                                        <font>
                                            <Font name="System Bold" size="13.0"/>
                                        </font>
                                    </Label>

                                    <Button text="Registrar Notas"
                                            prefWidth="150.0"
                                            mnemonicParsing="false"
                                            onAction="#handleRegistrarNotas"/>

                                    <Separator prefWidth="150.0"/>

                                    <Label text="Citas">
                                        <font>
                                            <Font name="System Bold" size="13.0"/>
                                        </font>
                                        <padding>
                                            <Insets top="5.0" />
                                        </padding>
                                    </Label>

                                    <Button text="Agenda"
                                            prefWidth="150.0"
                                            mnemonicParsing="false"
                                            onAction="#handleVerHorario"/>

                                    <Separator prefWidth="150.0"/>

                                    <Label text="Registros del Paciente">
                                        <font>
                                            <Font name="System Bold" size="13.0"/>
                                        </font>
                                    </Label>

                                    <Button text="Lista de Registros"
                                            prefWidth="150.0"
                                            mnemonicParsing="false"
                                            onAction="#handleListaRegistros"/>

                                    <Separator prefWidth="150.0"/>

                                    <Button text="Salir"
                                            prefWidth="150.0"
                                            mnemonicParsing="false"
                                            onAction="#handleSalir"/>
                                </children>

                                <padding>
                                    <Insets top="10.0" left="10.0"/>
                                </padding>
                            </VBox>
                        </children>
                    </AnchorPane>

                    <!-- COLUMNA CENTRAL (informaci贸n) -->
                    <AnchorPane>
                        <children>
                            <BorderPane prefHeight="398.0" prefWidth="442.0"
                                        AnchorPane.bottomAnchor="0.0"
                                        AnchorPane.leftAnchor="0.0"
                                        AnchorPane.rightAnchor="0.0"
                                        AnchorPane.topAnchor="0.0">

                                <center>
                                    <VBox alignment="TOP_CENTER" spacing="10.0"
                                          BorderPane.alignment="CENTER"
                                          maxWidth="400.0">
                                        <children>

                                            <Label text="Centro de atenci贸n psicologica">
                                                <font>
                                                    <Font name="Leelawadee UI" size="21.0" />
                                                </font>
                                            </Label>

                                            <Label text="BIENESTAR EMOCIONAL" textFill="RED">
                                                <font>
                                                    <Font name="Franklin Gothic Medium" size="18.0" />
                                                </font>
                                            </Label>

                                            <Label text="Portal de psicologo" textFill="BLUE">
                                                <font>
                                                    <Font name="Franklin Gothic Medium" size="18.0" />
                                                </font>
                                            </Label>

                                            <!-- rea de avisos -->
                                            <TextArea fx:id="avisoDisplayArea" editable="false"
                                                      prefHeight="100.0"
                                                      wrapText="true"/>
                                        </children>

                                        <BorderPane.margin>
                                            <Insets top="40.0"/>
                                        </BorderPane.margin>
                                    </VBox>
                                </center>

                            </BorderPane>
                        </children>
                    </AnchorPane>

                </SplitPane>

            </children>
        </AnchorPane>

    </children>
</VBox>
