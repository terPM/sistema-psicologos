<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="380" prefHeight="260"
            style="-fx-background-color: #F7F7F7; -fx-padding: 20;">

    <top>
        <Label text="Reagendar Cita"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI Semibold';"/>
    </top>

    <center>
        <VBox spacing="12" alignment="CENTER"
              style="-fx-padding: 10;">
            <children>

                <Label text="Selecciona la cita:"
                       style="-fx-font-size: 14px;"/>

                <ComboBox fx:id="comboCitas"
                          prefWidth="260"
                          style="-fx-background-radius: 8; -fx-border-color: #BFBFBF; -fx-border-radius: 8;"/>

                <Label text="Nueva Fecha:"
                       style="-fx-font-size: 14px;"/>

                <DatePicker fx:id="dateNuevaFecha"
                            prefWidth="260"
                            style="-fx-background-radius: 8; -fx-border-color: #BFBFBF; -fx-border-radius: 8;"/>

                <Label text="Nueva Hora:"
                       style="-fx-font-size: 14px;"/>

                <ComboBox fx:id="comboNuevaHora"
                          prefWidth="260"
                          style="-fx-background-radius: 8; -fx-border-color: #BFBFBF; -fx-border-radius: 8;"/>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER"
              style="-fx-padding: 10;">
            <children>
                <Button text="Reagendar"
                        prefWidth="120"
                        onAction="#handleReagendar"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;"/>

                <Button text="Cancelar"
                        prefWidth="120"
                        onAction="#handleCancelar"
                        style="-fx-background-color: #D9534F; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
