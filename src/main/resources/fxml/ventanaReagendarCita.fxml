<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Reagendar Cita" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <HBox spacing="8">
        <Label text="ID Cita:" prefWidth="90"/>
        <TextField fx:id="txtIdCita" promptText="Ingrese ID"/>
        <Button text="Cargar" onAction="#cargarCita"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Fecha:" prefWidth="90"/>
        <DatePicker fx:id="dpFecha"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Hora:" prefWidth="90"/>
        <ComboBox fx:id="cbHora"/>
    </HBox>

    <HBox spacing="8">
        <Label text="PsicÃ³logo:" prefWidth="90"/>
        <ComboBox fx:id="cbPsicologo"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Guardar" onAction="#guardar"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>

    <Label fx:id="lblStatus" style="-fx-text-fill: red;"/>

</VBox>
