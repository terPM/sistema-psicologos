<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Historial de Pagos y Citas" BorderPane.alignment="CENTER">
            <font>
                <Font name="Franklin Gothic Medium" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <ListView fx:id="listViewPagos" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" />
            </BorderPane.margin>
        </ListView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="45.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnCerrar" mnemonicParsing="false" onAction="#handleCerrar" text="Cerrar">
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>